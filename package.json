{
  "name": "@collight/lib-template",
  "version": "0.0.1",
  "description": "lib-template",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./jotai": {
      "types": "./dist/types/jotai/index.d.ts",
      "import": "./dist/esm/jotai/index.js",
      "require": "./dist/cjs/jotai/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "format": "prettier . --write --config ./prettier.config.js --plugin='@ianvs/prettier-plugin-sort-imports'",
    "lint": "tsc --noEmit --extendedDiagnostics && eslint .",
    "clean:out": "rimraf dist coverage",
    "clean:npm": "rimraf node_modules",
    "clean": "pnpm clean:out && pnpm clean:npm"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/utils": "^8.39.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "lib-template"
  ],
  "author": "Collight <collight@hotmail.com> (https://collight.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/collight/lib-template.git"
  },
  "bugs": {
    "url": "https://github.com/collight/lib-template/issues"
  },
  "homepage": "https://github.com/collight/lib-template"
}
